<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:statusBarColor">@color/off_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="N">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MainButton">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:background">@drawable/bg_cyan_button_with_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="MainButton.Dark" parent="MainButton">
        <item name="android:background">@drawable/bg_violet_button_with_ripple</item>
    </style>

    <style name="MainButton.Small" parent="MainButton">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MainButton.Dark.Small" parent="MainButton.Dark">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MainButton.Borderless" parent="MainButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_violet</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textColor">@color/grayish_violet</item>
        <item name="android:background">@drawable/bg_edit_text_box</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="Headline_6">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/grayish_violet</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Body_1">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/grayish_violet</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Body_4">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/grayish_violet</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView">
        <item name="android:textAppearance">@style/Body_1</item>
        <item name="android:textColor">@color/grayish_violet</item>
    </style>

    <style name="TextView.Body">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/grayish_violet</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextView.Body.Cyan" parent="TextView.Body">
        <item name="android:textColor">@color/cyan</item>
    </style>

    <style name="TextView.Header" parent="TextView.Body">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

</resources>